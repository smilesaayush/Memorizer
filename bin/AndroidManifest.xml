<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memorizer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.memorizer.MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.memorizer.MainMemo"
 			android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MainMemo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.memorizer.Objective"
 			android:theme="@android:style/Theme.Dialog"
 			android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.memorizer.Objective" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.memorizer.MainMenu"
 			
 			android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.memorizer.MainMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.memorizer.SetLevel"
 			android:theme="@android:style/Theme.Dialog"
 			android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.memorizer.SetLevel" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>